<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="266dp"
        android:layout_height="196dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="البريد الالكتروني ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B87F9E"
                android:drawableRight="@drawable/usericon"
                android:fontFamily="@font/tajawal_medium"
                android:inputType="textWebEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمة السر "
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EB4B51"
                android:fontFamily="@font/tajawal_medium" />

        </com.google.android.material.textfield.TextInputLayout>


        <Space
            android:layout_width="30dip"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/let_user_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_btn"
            android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_btn"
            android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"/>

        <Button
            android:id="@+id/rig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:elevation="0dp"
            android:fontFamily="@font/tajawal_medium"
            android:text="مستخدم جديد ؟ أنشاء حساب"
            android:textColor="#B87F9E" />

    </LinearLayout>
</LinearLayout>